<Window x:Class="spp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DtaGrid" x:FieldModifier="public" MouseDoubleClick="DtaGrid_OnMouseDoubleClick" AutoGenerateColumns="False" ColumnWidth="*" Margin="0,0,140,0"  CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Fio" Header="FIO" Binding="{Binding Name}" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="Race" Header="Race" Binding="{Binding Race.Name}" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="Location" Header="Location" Binding="{Binding Race.Location.Name}" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="Country" Header="Country" Binding="{Binding Race.Location.Country}" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="Car" Header="Car" Binding="{Binding Car.Mark}" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="Team" Header="Team" Binding="{Binding Team.Name}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Add Race"  Margin="686,33,21,353" Click="AddRace"/>
        <Button Content="Add Location"  Margin="686,102,21,284" Click="AddLocation"/>
        <Button Content="Add Car"  Margin="686,169,21,217" Click="AddCar"/>
        <Button Content="A dd Team"  Margin="686,243,21,143" Click="AddTeam"/>
        <Button Content="Add Racer"  Margin="686,317,21,69" Click="AddRacer"/>

    </Grid>
</Window>
